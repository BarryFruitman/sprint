<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottom_nav_backlog"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:src="@drawable/ic_backlog"
        android:tint="#000000"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/bottom_nav_sprint"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottom_nav_sprint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:src="@drawable/ic_sprint"
        android:tint="#000000"
        android:scaleX="2.0"
        android:scaleY="2.0"
        app:layout_constraintLeft_toRightOf="@id/bottom_nav_backlog"
        app:layout_constraintRight_toLeftOf="@id/bottom_nav_done"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bottom_nav_done"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:src="@drawable/ic_done"
        android:tint="#000000"
        app:layout_constraintLeft_toRightOf="@id/bottom_nav_sprint"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>